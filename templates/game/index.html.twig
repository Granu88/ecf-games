{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>

.link {
  color: blue;
}
.review {
  color: green;
}
</style>

<div class="container">
  <h1>Liste des jeux vid√©o</h1>
  <div class="row">
    <div class="col-12 mt-3" >
      <div class="card mb-3" style="width: 100%">
        <div class="row no-gutters">
          <div class="col-md-4 px-3 py-3">
            <img src="{{ game.cover }}" class="card-img " alt="cover">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h2 class="card-title">{{ game.name }}</h2>
              <p class="card-text">{{ game.description }}</p>
              {% if game.date %}
              <p class="card-text">Sortie : <b>{{ game.date|date('d/m/Y')}}</b></p>
              {% else %}
                <p class="card-text">Sortie : <b>Inconnue</b></p>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="card-footer text-center">
          {% if game.review %}
            <b class="review mt-3">{{ game.review }}/20</b>
          {% else %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <th scope="col">Editeur(s)/Developpeur(s):</th>
        <th scope="col">{{ game.editor.name}}</th>
      </tr>
      <tr>
        <th scope="col">Sortie:</th>
        <th scope="col">{{ game.date|date('d/m/Y') }}</th>
      </tr>
      <tr>
        <th scope="col">Classification:</th>
        <th scope="col">{{ game.classification}}</th>
      </tr>
      <tr>
        <th scope="col">Jeuxvideo.com:</th>
        <th scope="col"> <a class="link" href="{{ game.link }}">En savoir plus</a></th>
      </tr>
    </tbody>
  </table>
</div>
{% endblock %}
